<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CampaignDetails">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:background="#D5FBED"
                  android:layout_margin="10dp"
                  android:textAlignment="center">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Campaign Details"
                  android:layout_gravity="center_horizontal"
                  android:textSize="25dp"
                  android:textAlignment="center"
                  android:textColor="@color/black"
                  android:layout_margin="10dp"
                  android:layout_weight="1"/>
    </LinearLayout>

   <LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:textAlignment="center">

       <TextView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Campagin Name:"
                 android:textSize="20dp"/>
       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/camName"
           android:text="Campaign Name"
           android:textSize="15dp"
           android:textStyle="bold"
           android:layout_marginLeft="50dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="5dp"
           android:background="@color/black"/>
       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Description:"
           android:layout_marginTop="25dp"
           android:textSize="20dp"/>
       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/camDescription"
           android:text="Campaign Description"
           android:textSize="15dp"
           android:textStyle="bold"
           android:layout_marginLeft="50dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="5dp"
           android:background="@color/black"/>

       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Target Amount:"
           android:layout_marginTop="25dp"
           android:textSize="20dp"/>
       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/camTargetAmt"
           android:text="$ "
           android:textSize="15dp"
           android:textStyle="bold"
           android:layout_marginLeft="50dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="5dp"
           android:background="@color/black"/>

       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Description:"
           android:layout_marginTop="25dp"
           android:textSize="20dp"/>
       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/camType"
           android:text="Campaign Type"
           android:textSize="15dp"
           android:textStyle="bold"
           android:layout_marginLeft="50dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="5dp"
           android:background="@color/black"/>

       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Name of host:"
           android:layout_marginTop="25dp"
           android:textSize="20dp"/>
       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/camfullname"
           android:text="Fullname"
           android:textSize="15dp"
           android:textStyle="bold"
           android:layout_marginLeft="50dp"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginTop="5dp"
           android:background="@color/black"/>

       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Money Collected:"
           android:layout_marginTop="25dp"
           android:textSize="20dp"/>
       <TextView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/camMoneyCollected"
           android:text="Money Collected"
           android:textSize="15dp"
           android:textStyle="bold"
           android:layout_marginLeft="50dp"/>

   </LinearLayout>

</LinearLayout>